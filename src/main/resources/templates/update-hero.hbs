{{#partial "content"}}

        <h2 class="text-center">Updating {{hero.heroName}} Details</h2>

        <div class="container">
            <form action="/update-hero" method="post">
                <div class="form-group">
                    <label for="heroName">Hero Name:</label>
                    <input type="text" class="form-control" id="heroName" aria-describedby="emailHelp" value="{{hero.heroName}}" name="heroName" readonly >
                </div>
                <div class="form-group">
                    <label for="heroAge">Hero Age :</label>
                    <input type="number" class="form-control" aria-describedby="emailHelp" value="{{hero.heroAge}}" name="heroAge" id="heroName" readonly>
                </div>
                <div class="form-group">
                    <label for="heroPower">SuperPower:</label>
                    <input type="text" class="form-control" id="heroPower" aria-describedby="emailHelp" value="{{hero.heroPower}}" name="heroPower" required>
                </div>
                <div class="form-group">
                    <label for="heroWeakness">Weakness: </label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" value="{{hero.heroWeakness}}" id="heroWeakness" name="heroWeakness" required>
                </div>
                <div>
                    Current Squad: <a href="/squads/{{squad.squadId}}"> {{squad.squadName}}</a>
                </div>
                <br>
                <div class="form-group">
                    <label for="squadId" >Reassign squad:</label>
                    <select id="squadId" name="squadId"  required>
                        {{#each squads}}
                            <option value="{{squadId}}">{{squadName}}</option>
                        {{/each}}
                    </select>
                </div>

                <p class="text-end"><button class="btn btn-primary text-end" type="submit">Update {{hero.heroName}} <i class="fa fa-save"></i></button></p>

            </form>

        </div>
        <div>
            <p class="text-center">Don't see your squad?.  <a class="btn btn-outline-primary" href="/squads/new"> Create a new one.</a> </p>
        </div>

        <script>
            var heroSquadId = "{{hero.squadId}}";
            var squadSelect = document.getElementById("squadId");
            for (var i = 0; i < squadSelect.options.length; i++) {
            if (squadSelect.options[i].value === heroSquadId) {
            squadSelect.options[i].selected = true;
            break; // Exit the loop once the option is selected
            }
           }
        </script>

{{/partial}}

{{> "layout.hbs"}}

