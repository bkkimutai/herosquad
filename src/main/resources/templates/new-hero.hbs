{{#partial "content"}}

    <h2 class="text-center">Create A New Hero</h2>

    {{#if squads}}

        <div class="container">
            <form action="/heros" method="post">
                <div class="form-group">
                    <label for="heroName">Hero Name:</label>
                    <input type="text" class="form-control" id="heroName" aria-describedby="emailHelp" placeholder="Enter hero name" name="heroName" required >
                </div>
                <div class="form-group">
                    <label for="heroPower">SuperPower:</label>
                    <input type="text" class="form-control" id="heroPower" aria-describedby="emailHelp" placeholder="Enter your SuperPower" name="heroPower" required>
                </div>
                <div class="form-group">
                    <label for="heroAge">Hero Age :</label>
                    <input type="number" class="form-control" aria-describedby="emailHelp" placeholder="Enter your Age Hero!" name="heroAge" id="heroName" required>
                </div>
                <div class="form-group">
                    <label for="heroWeakness">Weakness: </label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Enter your Weakness!" id="heroWeakness" name="heroWeakness" required>
                </div>
                <div class="form-group">
                    <label for="squadId">Add hero to a squad:</label>
                    <select id="squadId" name="squadId" required>
                        {{#each squads}}
                            <option value="{{id}}">{{squadName}}</option>
                        {{/each}}
                    </select>
                </div>

                <p class="text-end"><button class="btn btn-primary text-end" type="submit">Activate your hero <i class="fa fa-save"></i></button></p>

            </form>

        </div>
        <div>
            <p class="text-center">Don't see your squad?.  <a class="btn btn-outline-primary" href="/squads/new"> Create a new one.</a> </p>
        </div>


    {{else}}
        <h3 class="text-center text-info"><i class="fas fa-info"></i>  You'll need to add a squad before you add a hero <br><br> <a class="btn btn-outline-primary" href="/squads/new">Create A New Squad ðŸ¦¸</a>  </h3>
    {{/if}}

{{/partial}}

{{> "layout.hbs"}}